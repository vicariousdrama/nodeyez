# Nodeyez: systemd unit for running the daily data retrieval
# /etc/systemd/system/nodeyez-daily-data-retrieval.service

[Unit]
Description=Retrieve background data for Nodeyez
StartLimitIntervalSec=600
StartLimitBurst=2

[Service]
WorkingDirectory=/home/nodeyez/nodeyez/scripts
ExecStart=/home/nodeyez/nodeyez/scripts/daily-data-retrieval.py
User=nodeyez
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
