# Nodeyez: systemd unit for Raretoshi panel generation
# /etc/systemd/system/nodeyez-raretoshi.service

[Unit]
Description=Image for Raretoshi
StartLimitIntervalSec=600
StartLimitBurst=2

[Service]
WorkingDirectory=/home/bitcoin/nodeyez/scripts
ExecStart=/home/bitcoin/nodeyez/scripts/raretoshi.py
User=bitcoin
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
