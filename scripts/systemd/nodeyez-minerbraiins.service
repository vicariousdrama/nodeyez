# Nodeyez: systemd unit for Miner Braiins panel generation
# /etc/systemd/system/nodeyez-minerbraiins.service

[Unit]
Description=Image for Miner Status running Braiins
StartLimitIntervalSec=600
StartLimitBurst=2

[Service]
WorkingDirectory=/home/bitcoin/nodeyez/scripts
ExecStart=/home/bitcoin/nodeyez/scripts/minerbraiins.py
User=bitcoin
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
