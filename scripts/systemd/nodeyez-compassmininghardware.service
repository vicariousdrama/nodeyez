# Nodeyez: systemd unit for Compass Mining Hardware panel generation
# /etc/systemd/system/nodeyez-compassmining.service

[Unit]
Description=Image for Compass Mining Hardware
StartLimitIntervalSec=600
StartLimitBurst=2

[Service]
WorkingDirectory=/home/bitcoin/nodeyez/scripts
ExecStart=/home/bitcoin/nodeyez/scripts/compassmininghardware.py
User=bitcoin
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
