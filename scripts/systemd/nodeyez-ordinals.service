# Nodeyez: systemd unit for Ordinals panel generation
# /etc/systemd/system/nodeyez-ordinals.service

[Unit]
Description=Nodeyez image generator for Ordinal Inscriptions
StartLimitIntervalSec=600
StartLimitBurst=2
Wants=bitcoind.service
After=bitcoind.service

[Service]
WorkingDirectory=/home/nodeyez/nodeyez/scripts
ExecStartPre=/bin/cp /home/bitcoin/.bitcoin/.cookie /home/nodeyez/.bitcoin/.cookie
ExecStartPre=/bin/chown nodeyez:nodeyez /home/nodeyez/.bitcoin/.cookie
ExecStart=/usr/bin/env python3 /home/nodeyez/nodeyez/scripts/ordinals.py
User=nodeyez
Restart=on-failure
RestartSec=30
PermissionsStartOnly=true

[Install]
WantedBy=multi-user.target
