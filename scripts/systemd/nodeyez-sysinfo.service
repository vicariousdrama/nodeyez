# Nodeyez: systemd unit for System Info panel generation
# /etc/systemd/system/nodeyez-sysinfo.service

[Unit]
Description=Nodeyez image generator for System Information
StartLimitIntervalSec=600
StartLimitBurst=2

[Service]
WorkingDirectory=/home/nodeyez/nodeyez/scripts
ExecStart=/usr/bin/env python3 /home/nodeyez/nodeyez/scripts/sysinfo.py
User=nodeyez
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
