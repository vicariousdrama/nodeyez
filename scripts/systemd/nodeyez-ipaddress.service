# Nodeyez: systemd unit for IP Address panel generation
# /etc/systemd/system/nodeyez-ipaddress.service

[Unit]
Description=Image for IP Addrress
StartLimitIntervalSec=600
StartLimitBurst=2

[Service]
WorkingDirectory=/home/nodeyez/nodeyez/scripts
ExecStart=/home/nodeyez/nodeyez/scripts/ipaddress.py
User=nodeyez
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
